{
  "swagger": "2.0",
  "info": {
    "title": "Masterblog API",
    "version": "1.0.0",
    "description": "API documentation for Masterblog"
  },
  "host": "localhost:5001",
  "basePath": "/api",
  "tags": [
    {
      "name": "Post",
      "description": "Operations related to blog posts"
    }
  ],
  "paths": {
    "/api/posts": {
      "get": {
        "summary": "Get all posts",
        "tags": ["Post"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "sort",
            "in": "query",
            "type": "string",
            "description": "Field to sort by"
          },
          {
            "name": "direction",
            "in": "query",
            "type": "string",
            "enum": ["asc", "desc"],
            "description": "Sort direction"
          }
        ],
        "responses": {
          "200": {
            "description": "List of posts returned successfully"
          }
        }
      },
      "post": {
        "summary": "Create a new post",
        "tags": ["Post"],
        "consumes": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "post",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "content": { "type": "string" }
              },
              "required": ["title", "content"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Post created successfully"
          },
          "400": {
            "description": "Invalid input data"
          }
        }
      }
    }
  }
}
